{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "commit": "git-cz"
  },
  "dependencies": {
    "@google-cloud/storage": "^5.8.5",
    "@supabase/supabase-js": "^1.11.10",
    "bulma": "^0.9.2",
    "bulma-tooltip": "^3.0.2",
    "emoji-mart": "^3.0.1",
    "formidable": "^1.2.2",
    "formik": "^2.2.6",
    "next": "latest",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-player": "^2.9.0",
    "remixicon": "^2.5.0",
    "sass": "^1.32.12"
  },
  "devDependencies": {
    "@types/emoji-mart": "^3.0.4",
    "@types/formidable": "^1.2.1",
    "@types/node": "^12.12.21",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "typescript": "4.0"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-push": "yarn build",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint:prettier",
      "yarn lint:eslint",
      "git add"
    ],
    "*.{js,json,html}": [
      "yarn lint:prettier",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
